<!DOCTYPE html>
<html>
<head>
  <title>Glacier Ridge Suites</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'jquery.nivo.slider.pack', 'script' %>
  <%= csrf_meta_tag %>
</head>
<body id="page1">
	<div class="tail-top">
      <div class="tail-bottom">
         <div id="main">
            <!-- header -->
            <div id="header">
               <div class="row-1">
                  <div class="logo"><a href="/"><img alt="" src="/images/logo.png" /></a></div>
                
                  <ul class="nav">
                     <li><a href="/" class="current first">Home</a></li>
                     <li><a href="/suites">Suites</a></li>
                     <li><a href="/area">Area</a></li>
                     <li><a href="/services">Services</a></li>
                     <li><a href="/real-estate">Real Estate</a></li>
                  </ul>
               </div>
               <div class="row-2">
                   <br/>
                   <br/>
                   <br/>

               	<div class="wrapper">
               	  <% if notice %>
               	  <script type="text/javascript">
                  $(document).click(function() {
                      $("#notice").hide("slow");
                  });
                  </script>
               	         <p id="notice"><%= notice %></p>
               	  <% end %>
                  	<div class="col-1">
                     	<!-- box1 begin -->
                        <div class="box1">
                        	<div class="inner">
                           	<h4>Booking</h4>
                           	<%= form_for :booking_request , :url => send_booking_request_path, :html => {:id => 'booking-form'} do |f| %>
                              	<div>
                                 	<label style="margin-top: -5px"><%= f.text_field :name, :value => "Your name:", :onclick => "this.value='';" %></label>
                                    <label style="margin-top: -5px"><%= f.text_field :email, :value => "Your e-mail:", :onclick => "this.value='';" %></label>
                                    <label style="margin-top: -5px"><%= f.text_field :phone, :value => "Your phone:", :onclick => "this.value='';" %></label>
                                    <label style="margin-top: -5px"><%= f.text_field :address, :value => "Your address:", :onclick => "this.value='';" %></label>
                                    <label class="alt">
                                    	Num of adults: &nbsp; &nbsp; &nbsp; Num of children:<br />
                                       <%= f.select :adults, ['1','2','3','4','5','6'] %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.select :kids, [' ','1','2','3','4','5','6'] %>
                                    </label>
                                    <label class="alt" style="margin-top:-5px;">
                                    	Arrival date:<br />
                                       <%= f.date_select :arrival, :use_short_month => true, :order => [:month, :day, :year]%>
                                    </label>
                                    <div class="wrapper"><%= f.submit "Submit Booking", :style => 'background-color:#dadbdb; width: 100px; border: 0; color:#094360; float:right' %></div>
                                 </div>
                             <% end %>
                           </div>
                        </div>
                        <!-- box1 end -->
                     </div>
                     <div class="col-2">
                     	<!-- slide-box begin -->
                        
                        	<div class="inner1">
                        	  <div id="slider">
                            	<img src="images/slide1.png" alt="" />
                            	<img src="images/slide2.png" alt="" />
                            	<img src="images/slide3.png" alt=""  />
                            	<img src="images/slide4.png" alt="" />	
                           </div>
                        </div>
                        <!-- slide-box end -->
                     </div>
                  </div>
               </div>
            </div>
            <!-- content -->
            <div id="content">
               <%= yield %>
            </div>
            <!-- footer -->
            <div id="footer">
            	<p>Glacier Ridge Suites &copy; 2009 | <a href="index-5.html">Privacy Policy</a></p>
            </div>
         </div>
      </div>
   </div>
</body>
</html>
